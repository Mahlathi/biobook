<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/doo"
        >

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_margin="20dp"

            >
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Registration Information"

                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginBottom="40dp"
                android:textColor="#F0000000"
                />
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="40dp"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="20dp"
                    android:layout_marginRight="34dp"
                    android:textColor="#F0000000"
                    />
            <EditText
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="#ffffffff"
                    android:id="@+id/txtname"
                    android:textColor="#F0000000"

                    />
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="40dp"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surname"
                    android:textSize="20dp"
                    android:textColor="#F0000000"
                    android:layout_marginRight="6dp"
                    />
            <EditText
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="#ffffffff"
                    android:id="@+id/txtsururname"
                    android:textColor="#F0000000"


                    />
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="40dp"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="20dp"
                    android:layout_marginRight="38dp"
                    android:textColor="#F0000000"
                    />
            <EditText
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="#ffffffff"
                    android:id="@+id/txtemail"
                    android:textColor="#F0000000"

                    />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="40dp"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cell"
                    android:textSize="20dp"
                    android:layout_marginRight="54dp"
                    android:textColor="#F0000000"
                    />
            <EditText
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="#ffffffff"
                    android:id="@+id/txtcell"
                    android:textColor="#F0000000"

                    />
        </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_margin="20dp"

            >
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Residence"

                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="-0dp"
                android:textColor="#F0000000"
                />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="40dp"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Street no."
                    android:textSize="20dp"
                    android:layout_marginRight="32dp"
                    android:textColor="#F0000000"
                    />
            <EditText
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="#ffffffff"
                    android:id="@+id/txtstr"
                    android:textColor="#F0000000"

                    />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="40dp"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Street name"
                    android:textSize="20dp"
                    android:layout_marginRight="09dp"
                    android:textColor="#F0000000"
                    />
            <EditText
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="#ffffffff"
                    android:id="@+id/txtstrname"
                    android:textColor="#F0000000"

                    />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="40dp"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Town"
                    android:textSize="20dp"
                    android:layout_marginRight="69dp"
                    android:textColor="#F0000000"
                    />
            <EditText
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="#ffffffff"
                    android:id="@+id/txttown"
                    android:textColor="#F0000000"

                    />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="40dp"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Postal code"
                    android:textSize="20dp"
                    android:layout_marginRight="14dp"
                    android:textColor="#F0000000"
                    />
            <EditText
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:background="#ffffffff"
                    android:id="@+id/txtpost"
                    android:textColor="#F0000000"

                    />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="40dp"
                >
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="87dp"
                    android:src="@drawable/note"
                    android:layout_marginRight="40dp"
                    android:id="@+id/btnsub"
                    />
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="87dp"
                    android:src="@drawable/rere"
                    android:layout_margin="2dp"
                    android:padding="20dp"
                    android:id="@+id/btnclear"
                    />
        </LinearLayout>
    </LinearLayout>

</ScrollView>